<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_backgroud_color"
    android:fitsSystemWindows="true"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/defalut_layout_height"
            android:background="@drawable/image_title_background">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="订单详情"
                android:textColor="@color/color_white"
                android:textSize="@dimen/default_title_size" />

            <LinearLayout
                android:id="@+id/iv_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_back" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/radius_popup"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/color_white"
                android:textSize="@dimen/default_text_size" />
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/defalut_layout_height">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_min"
                android:layout_marginTop="@dimen/radius_popup"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_margin"
                android:text="基本信息"
                android:textColor="@color/default_font_color"
                android:textSize="@dimen/default_content_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@color/color_line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_margin"
                    android:text="订单编号:"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    />

                <TextView
                    android:id="@+id/tv_ordernum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_margin"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/default_margin"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    android:text="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_margin"
                    android:text="公司名称:"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    />

                <TextView
                    android:id="@+id/tv_companyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_margin"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/default_margin"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    android:text="" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="服务地址:" />

                    <TextView
                        android:id="@+id/tv_companyAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/default_margin"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/radius_popup"
                android:background="@color/color_white"
                >

                <LinearLayout
                    android:id="@+id/ll_audit_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/tv_audit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="审核时间:" />

                    <TextView
                        android:id="@+id/tv_audit_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/default_margin"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_time_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_margin"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    android:text="报修时间:" />

                <TextView
                    android:id="@+id/tv_repairs_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_margin"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/default_margin"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    android:text="" />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="结束时间:" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/default_margin"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="" />
                </LinearLayout>


            </LinearLayout>


            <!--维修信息-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_min"
                android:layout_marginTop="@dimen/default_margin"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_margin"
                android:text="维修信息"
                android:textColor="@color/default_font_color"
                android:textSize="@dimen/default_content_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@color/color_line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_margin"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    android:text="报修设备:" />

                <TextView
                    android:id="@+id/tv_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_margin"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/default_margin"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    android:text="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_margin"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    android:text="出厂编号:" />

                <TextView
                    android:id="@+id/tv_outnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_margin"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/default_margin"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/default_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_margin"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    android:text="故障描述:" />

                <TextView
                    android:id="@+id/tv_fault_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_margin"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="@dimen/default_margin"
                    android:textColor="@color/default_content_color_1"
                    android:textSize="@dimen/default_list_item_content_size"
                    android:text="" />
            </LinearLayout>


            <!--其他信息-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height_min"
                android:layout_marginTop="@dimen/default_margin"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_margin"
                android:text="其它信息"
                android:textColor="@color/default_font_color"
                android:textSize="@dimen/default_content_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:background="@color/color_line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/default_margin"
                android:background="@color/color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="上报人姓名:" />

                    <TextView
                        android:id="@+id/tv_upName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/default_margin"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="上报人电话:" />

                    <TextView
                        android:id="@+id/tv_upTel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/default_margin"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/default_height_min"
                    android:gravity="center_vertical"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_server_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="服务人员:"

                        />

                    <TextView
                        android:id="@+id/tv_serverName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="@dimen/default_height_min"
                        android:layout_marginRight="@dimen/default_margin"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/default_margin"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_list_item_content_size"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

                <!--故障照片视频-->
                <!--其他信息-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_height_min"
                    android:layout_marginTop="@dimen/default_margin"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_margin"
                    android:text="故障照片/视频"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/default_content_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:background="@color/color_line"></View>

                <GridView
                    android:id="@+id/rv_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:numColumns="3" />

                <LinearLayout
                    android:id="@+id/ll_server_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <!--预估费用-->
                <LinearLayout
                    android:id="@+id/ll_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fee"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_height_min"
                        android:layout_marginTop="@dimen/default_margin"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/default_margin"
                        android:text="预估费用"
                        android:textColor="@color/default_font_color"
                        android:textSize="@dimen/default_content_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/default_margin"
                            android:textColor="@color/default_content_color_1"
                            android:textSize="@dimen/default_list_item_content_size"
                            android:text="差旅费:" />

                        <TextView
                            android:id="@+id/tv_traveling_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_margin"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/default_margin"
                            android:textColor="@color/default_content_color_1"
                            android:textSize="@dimen/default_list_item_content_size"
                            android:text="" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/default_margin"
                            android:textColor="@color/default_content_color_1"
                            android:textSize="@dimen/default_list_item_content_size"
                            android:text="服务费:" />

                        <TextView
                            android:id="@+id/tv_server_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_margin"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/default_margin"
                            android:textColor="@color/default_content_color_1"
                            android:textSize="@dimen/default_list_item_content_size"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/default_margin"
                            android:textColor="@color/default_content_color_1"
                            android:textSize="@dimen/default_list_item_content_size"
                            android:text="备件费:" />

                        <TextView
                            android:id="@+id/tv_spare_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_margin"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/default_margin"
                            android:textColor="@color/default_content_color_1"
                            android:textSize="@dimen/default_list_item_content_size"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/default_margin"
                            android:textColor="@color/default_content_color_1"
                            android:textSize="@dimen/default_list_item_content_size"
                            android:text="其它费:" />

                        <TextView
                            android:id="@+id/tv_other_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_margin"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/default_margin"
                            android:textColor="@color/default_content_color_1"
                            android:textSize="@dimen/default_list_item_content_size"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/default_margin"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/default_margin"
                            android:textColor="@color/default_content_color_1"
                            android:textSize="@dimen/default_list_item_content_size"
                            android:text="总费用:" />

                        <TextView
                            android:id="@+id/tv_all_fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_margin"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/default_margin"
                            android:textColor="@color/default_content_color_1"
                            android:textSize="@dimen/default_list_item_content_size"
                            android:text="" />
                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_transfer"
                    style="@style/default_button"
                    android:text="写移交报告"
                    android:visibility="gone" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_button_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_negation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF0000"
            android:gravity="center"
            android:text="不通过"
            android:textColor="@color/color_white"
            android:textSize="@dimen/default_content_size" />

        <TextView
            android:id="@+id/tv_affirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/defalut_title_color"
            android:gravity="center"
            android:text="通过"
            android:textColor="@color/color_white"
            android:textSize="@dimen/default_content_size" />
    </LinearLayout>
</RelativeLayout>
