<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_height_3"
    android:gravity="center_vertical"
    android:background="@color/color_white"
    >
    <TextView
        android:id="@+id/tv_atta_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_padding_3"
        android:textSize="@dimen/default_text_size_3"
        android:ellipsize="end"
        />
    <ImageView
        android:id="@+id/iv_atta_delete"
        android:layout_width="@dimen/default_icon_size_5"
        android:layout_height="@dimen/default_icon_size_5"
        android:src="@drawable/image_close"
        android:layout_marginRight="@dimen/default_margin_3"
        />
</LinearLayout>
