<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_backgroud_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_user_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image_title_background"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_height_3"
                    android:gravity="center_vertical|right"

                    >
                    <RelativeLayout
                        android:id="@+id/rl_message"
                        android:layout_width="@dimen/default_user_icon_width"
                        android:layout_height="@dimen/default_user_icon_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:id="@+id/iv_message"
                            android:layout_width="@dimen/default_user_order_width"
                            android:layout_height="@dimen/default_user_order_height"
                            android:layout_centerInParent="true"
                            android:src="@drawable/image_msg" />

                        <View
                            android:id="@+id/view_point"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_num"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_setting"
                        android:layout_width="@dimen/default_user_order_width"
                        android:layout_height="@dimen/default_user_order_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/image_setting" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="top"
                    android:orientation="horizontal"

                    >

                    <com.example.wsq.android.view.RoundImageView
                        android:id="@+id/roundImage_header"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="@dimen/default_height_min"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/image_header_bg"
                        imagecontrol:border_inside_color="#FFFFFF"
                        imagecontrol:border_outside_color="#E4E4E4"
                        imagecontrol:border_thickness="2dp" />
                    />

                    <LinearLayout
                        android:id="@+id/ll_user_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/radius_popup"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/default_content_size" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_radius"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_sex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/default_list_item_content_size" />

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/color_white"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:visibility="gone"
                                    />

                                <TextView
                                    android:id="@+id/tv_role"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/color_white"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="@dimen/default_list_item_content_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_sign_integral"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/radius_popup"

                                >

                                <LinearLayout
                                    android:id="@+id/ll_iv_integral"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"

                                    >

                                    <ImageView
                                        android:id="@+id/iv_integral"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/image_integral" />

                                    <TextView
                                        android:id="@+id/tv_integral"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/default_radius"
                                        android:text="积分 0分"
                                        android:textColor="@color/color_white"
                                        android:textSize="@dimen/default_list_item_content_size" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_sign"
                                    android:layout_width="32dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="@dimen/default_margin"
                                    android:background="@drawable/image_user_sign"
                                    android:paddingBottom="2dp"
                                    android:paddingLeft="@dimen/radius_popup"
                                    android:paddingRight="@dimen/radius_popup"
                                    android:paddingTop="2dp"
                                    android:textColor="@color/defalut_title_color"
                                    android:textSize="@dimen/default_list_item_content_size" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/radius_popup"
                                android:src="@drawable/image_left" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/shape_user_c"
                    android:visibility="gone"
                    />
                <!--企业工程师 企业管理工程师 任务部分-->
                <LinearLayout
                    android:id="@+id/ll_company_order"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/shape_user_c"
                    android:visibility="visible"
                    >

                    <RelativeLayout
                        android:id="@+id/ll_order_unfinish"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_order_unfinish"
                                android:layout_width="@dimen/default_user_order_width"
                                android:layout_height="@dimen/default_user_order_height"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_radius"
                                android:textSize="@dimen/default_content_size"
                                android:textColor="@color/default_content_color_1"
                                android:text="未审核" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_uncheck"
                            android:layout_width="@dimen/default_order_point"
                            android:layout_height="@dimen/default_order_point"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/shape_num"
                            android:gravity="center"
                            android:text=""
                            android:textSize="@dimen/default_btn_min_size"
                            android:textColor="@color/color_white"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_order_finish"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_order_finish"
                                android:layout_width="@dimen/default_user_order_width"
                                android:layout_height="@dimen/default_user_order_height"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_radius"
                                android:textColor="@color/default_content_color_1"
                                android:textSize="@dimen/default_content_size"
                                android:text="已审核" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_hascheck"
                            android:layout_width="@dimen/default_order_point"
                            android:layout_height="@dimen/default_order_point"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/shape_num"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="@dimen/default_btn_min_size"
                            android:textColor="@color/color_white"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_order_handler"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_order_handler"
                                android:layout_width="@dimen/default_user_order_width"
                                android:layout_height="@dimen/default_user_order_height"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_radius"
                                android:textColor="@color/default_content_color_1"
                                android:textSize="@dimen/default_content_size"
                                android:text="处理中" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_processed"
                            android:layout_width="@dimen/default_order_point"
                            android:layout_height="@dimen/default_order_point"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/shape_num"
                            android:gravity="center"
                            android:layout_marginTop="3dp"
                            android:text="0"
                            android:textSize="@dimen/default_btn_min_size"
                            android:textColor="@color/color_white"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_order"
                                android:layout_width="@dimen/default_user_order_width"
                                android:layout_height="@dimen/default_user_order_height"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_radius"
                                android:textColor="@color/default_content_color_1"
                                android:textSize="@dimen/default_content_size"
                                android:text="已完成" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_done"
                            android:layout_width="@dimen/default_order_point"
                            android:layout_height="@dimen/default_order_point"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/shape_num"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="@dimen/default_btn_min_size"
                            android:textColor="@color/color_white"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <!--服务工程师 任务部分-->
                <LinearLayout
                    android:id="@+id/ll_server_order"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/shape_user_c">

                    <RelativeLayout
                        android:id="@+id/ll_order_fllocation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_order_fllocation"
                                android:layout_width="@dimen/default_user_order_width"
                                android:layout_height="@dimen/default_user_order_height"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/default_content_color_1"
                                android:textSize="@dimen/default_content_size"
                                android:layout_marginTop="5dp"
                                android:text="已分配" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_assigned"
                            android:layout_width="@dimen/default_order_point"
                            android:layout_height="@dimen/default_order_point"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/shape_num"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="@dimen/default_btn_min_size"
                            android:textColor="@color/color_white"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_order_progress"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_order_progress"
                                android:layout_width="@dimen/default_user_order_width"
                                android:layout_height="@dimen/default_user_order_height"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_radius"
                                android:textColor="@color/default_content_color_1"
                                android:textSize="@dimen/default_content_size"
                                android:text="处理中" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_server_processed"
                            android:layout_width="@dimen/default_order_point"
                            android:layout_height="@dimen/default_order_point"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/shape_num"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="@dimen/default_btn_min_size"
                            android:textColor="@color/color_white"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_order_feedback"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_order_feedback"
                                android:layout_width="@dimen/default_user_order_width"
                                android:layout_height="@dimen/default_user_order_height"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_radius"
                                android:textColor="@color/default_content_color_1"
                                android:textSize="@dimen/default_content_size"
                                android:text="反馈中" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_feedback"
                            android:layout_width="@dimen/default_order_point"
                            android:layout_height="@dimen/default_order_point"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/shape_num"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="@dimen/default_btn_min_size"
                            android:textColor="@color/color_white"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_server_finish"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_server_finish"
                                android:layout_width="@dimen/default_user_order_width"
                                android:layout_height="@dimen/default_user_order_height"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_radius"
                                android:textColor="@color/default_content_color_1"
                                android:textSize="@dimen/default_content_size"
                                android:text="完成" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_server_done"
                            android:layout_width="@dimen/default_order_point"
                            android:layout_height="@dimen/default_order_point"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/shape_num"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="@dimen/default_btn_min_size"
                            android:textColor="@color/color_white"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>






            <!--账户余额部分-->

            <LinearLayout
                android:id="@+id/ll_fee"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/radius_popup"
                android:background="@color/color_white">

                <LinearLayout
                    android:id="@+id/ll_receipts"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_money_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_title_size"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_radius"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_content_size"
                        android:text="收入(元)" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_pay_Record"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pay_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_title_size"
                        android:visibility="visible"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_radius"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_content_size"
                        android:text="提现(元)" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_title_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_radius"
                        android:textSize="@dimen/default_content_size"
                        android:textColor="@color/default_content_color_1"
                        android:text="余额(元)" />
                </LinearLayout>




            </LinearLayout>


            <!--服务工程师-->
            <LinearLayout
                android:id="@+id/ll_device_server"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="@dimen/radius_popup"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_device_report"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_device_report"
                        android:layout_width="@dimen/default_user_icon_width"
                        android:layout_height="@dimen/default_user_icon_height"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_content_size"
                        android:text="写报告" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_device_bank_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_device_bank_code"
                        android:layout_width="@dimen/default_user_icon_width"
                        android:layout_height="@dimen/default_user_icon_height"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_content_size"
                        android:text="银行卡" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_device_server_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_device_server_share"
                        android:layout_width="@dimen/default_user_icon_width"
                        android:layout_height="@dimen/default_user_icon_height"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_content_size"
                        android:text="分享" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_device_knowledge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_device_knowledge"
                        android:layout_width="@dimen/default_user_icon_width"
                        android:layout_height="@dimen/default_user_icon_height"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_content_size"
                        android:text="圈内知识" />

                </LinearLayout>
            </LinearLayout>
            <!--设备部分-->
            <LinearLayout
                android:id="@+id/ll_manager"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="@dimen/radius_popup"
                android:background="@color/color_white">

                <LinearLayout
                    android:id="@+id/ll_device_assert"
