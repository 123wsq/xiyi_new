                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fault"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_fault"
                        android:layout_width="@dimen/default_user_icon_width"
                        android:layout_height="@dimen/default_user_icon_height"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_content_size"
                        android:text="资料" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_manager_shared"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_manager_shared"
                        android:layout_width="@dimen/default_user_icon_width"
                        android:layout_height="@dimen/default_user_icon_height"
