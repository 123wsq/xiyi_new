                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/default_content_color_1"
                        android:textSize="@dimen/default_content_size"
                        android:text="关于我们" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_quit"
                style="@style/default_button"
                android:text="退出登录"

                />


        </LinearLayout>
    </ScrollView>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <LinearLayout
            android:id="@+id/ll_integral_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="26dp"
                android:src="@drawable/image_integral_shopping"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分兑换"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/default_list_item_content_size"
                android:textColor="#502486"
                />
