<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="356dp"
    android:background="@color/color_white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="输入密码"
            android:textSize="@dimen/default_title_size"
            android:textColor="@color/default_font_color"
            android:gravity="center"
            />
        <LinearLayout
            android:id="@+id/ll_popup_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/image_close"

                />

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_margin"
        android:paddingBottom="@dimen/default_margin"
        >


    <com.example.wsq.android.view.PasswordInputView
        android:id="@+id/et_psdInput"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_2"
        android:cursorVisible="false"
        android:background="@color/transparent"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="@dimen/default_text_size"
        app:pivBorderColor="#DCDCDC"
        app:pivBorderRadius="1dp"
        app:pivBorderWidth="1px"
        app:pivPasswordColor="@color/black"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="5dp"
        android:layout_marginTop="@dimen/default_margin_3"
        android:layout_marginLeft="@dimen/default_button_margin_top"
        android:layout_marginRight="@dimen/default_button_margin_top"
        android:layout_marginBottom="@dimen/default_margin_3"
        android:clickable="false"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#bfbfbf"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:id="@+id/ll_keyboard_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/shape_edit_backgroud"
                >
                <TextView
                    android:id="@+id/tv_keycode_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/default_font_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_keyboard_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:background="@drawable/shape_edit_backgroud"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_keycode_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/default_font_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC"
                    android:textSize="8sp"
                    android:textColor="@color/default_font_color"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_keyboard_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:background="@drawable/shape_edit_backgroud"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_keycode_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/default_font_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEF"
                    android:textSize="8sp"
                    android:textColor="@color/default_font_color"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/default_margin"
            >
            <LinearLayout
                android:id="@+id/ll_keyboard_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/shape_edit_backgroud"
                >
                <TextView
                    android:id="@+id/tv_keycode_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/default_font_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GHI"
                    android:textSize="8sp"
                    android:textColor="@color/default_font_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_keyboard_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:background="@drawable/shape_edit_backgroud"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_keycode_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/default_font_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JKL"
                    android:textSize="8sp"
                    android:textColor="@color/default_font_color"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_keyboard_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:background="@drawable/shape_edit_backgroud"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_keycode_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="@color/default_font_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MNO"
                    android:textSize="8sp"
                    android:textColor="@color/default_font_color"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/default_margin"
            >
            <LinearLayout
                android:id="@+id/ll_keyboard_7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/shape_edit_backgroud"
                >
                <TextView
                    android:id="@+id/tv_keycode_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="@color/default_font_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PQRS"
                    android:textSize="8sp"
                    android:textColor="@color/default_font_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_keyboard_8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:background="@drawable/shape_edit_backgroud"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_keycode_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="@color/default_font_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TUV"
                    android:textSize="8sp"
                    android:textColor="@color/default_font_color"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_keyboard_9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:background="@drawable/shape_edit_backgroud"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_keycode_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textColor="@color/default_font_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WXYZ"
                    android:textSize="8sp"
                    android:textColor="@color/default_font_color"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/default_margin"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#BFBFBF"

                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_keyboard_0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:background="@drawable/shape_edit_backgroud"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_keycode_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/default_font_color"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_keyboard_delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/default_margin"
                android:background="#BFBFBF"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_keyboard_delete"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/image_keyboard_delete"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
